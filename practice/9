<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
	<script>
    $(function(){
      $("button").on("click", function(){
      //id가 "list"인 요소의 자손 요소 중에서 <li>요소를 모두 선택한 후에,
      //그 중에서 두번쨰 요소의 값을 설정함
      $("#list").find("li").eq(1).html("두 번째 아이템을 선택");
      });
    });
  </script>
  
  <body>
    <h1>메소드 체이닝</h1>
    <ul id="list">
      <li>첫 번쨰 아이템</li>
      <li>두 번쨰 아이템</li>
      <li>세 번쨰 아이템</li>
  </body>
