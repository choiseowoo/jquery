<body>
  <h1>removeChild()</h1>
  <button onclick="remove()">노드삭제</button>
  <div id="list">
    <p>HTML</p>
    <p id="item">CSS</p>
    <p>JAVAScript</p>
  </div>
  
  <script>
    function remove(){
      var parent = ducoment.getElementById("list");     // 아이디가 "list"인 요소를 선택함
      var removeditem = document.getElementById("item"); // 아이디가 "item"인 요소를 선택함.
      parent.removeChild(removeditem);                  // 지정된 요소를 삭제함.
    }
  </script>
</body>
